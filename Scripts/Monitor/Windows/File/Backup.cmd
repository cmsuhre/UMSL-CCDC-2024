cd C:/backup

REM make folder
mkdir domain
cd domain


::Services
sc  query >> services.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> services.txt
::Ports
netstat -na | findstr LISTENING >> OpenPorts.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> OpenPorts.txt

::AD
REM List Workstation in domain: 
netdom query WORKSTATION >> WorkstationDomain.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> WorkstationDomain.txt


REM List of  servers in  the domain: 
netdom query SERVER >> serverDomain.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> serverDomain.txt

REM List of  domain controllers: 
netdom query DC >> DCDomain.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> DCDomain.txt

REM List of  organizational units under which the specified user can create a  machine object: 
netdom query OU >>  OUDomain.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> OUDomain.txt

REM List of  primary domain controller: 
netdom query PDC >> primaryDC.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> PrimaryDC.txt

REM List the domain trusts: 
netdom query TRUST >> DomainTrust.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> DomainTrust.txt

REM Query the domain for the current list of  FSMO owners:
netdom query FSMO >> FSMO.txt
echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> FSMO.txt

REM List all computers from Active Directory: 
dsquery COMPUTER "OU=servers,DC=<DOMAIN NAME>,DC=<DOMAIN EXTENSION>" -o  rdn -limit 0  >> ADComp.txt

echo "_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" >> ADComp.txt
